{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "webpack --progress --config=webpack.config.js",
    "serve": "node compile/server.js",
    "production-serve": "env NODE_ENV=production node compile/server.js",
    "watch-node": "nodemon compile/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "env REDIS_HOST=localhost REDIS_PORT=6379 jest --forceExit --coverage --verbose",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect compile/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "~1.4.3",
    "errorhandler": "^1.5.0",
    "express": "~4.15.5",
    "express-mung": "^0.4.6",
    "joi": "^13.1.1",
    "log4js": "^2.5.2",
    "mongoose": "^5.0.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.2.4",
    "@types/chai-things": "0.0.32",
    "@types/compression": "0.0.33",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.0.35",
    "@types/express-mung": "^0.4.2",
    "@types/jest": "^24.0.20",
    "@types/joi": "^13.0.6",
    "@types/mongoose": "^4.7.29",
    "chai": "^4.1.2",
    "chai-like": "^1.1.1",
    "chai-things": "^0.2.0",
    "concurrently": "^3.5.1",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^4.4.2",
    "tslint": "^5.9.1",
    "typescript": "^3.3.0-rc",
    "webpack": "^4.16.5",
    "webpack-command": "^0.4.1"
  }
}
